<div class="container mx-auto p-6">

  <!-- Enlace para crear un nuevo evento -->
  <div class="flex justify-end mb-4">
    <%= link_to "New Event", new_event_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <!-- Título de la página -->
  <h1 class="text-4xl font-bold mb-6 text-gray-800">Events</h1>

  <!-- Lista de todos los eventos -->
  <div id="events" class="mb-10">
    <% @events.each do |event| %>
      <div class="mb-6 p-4 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow">
        <%= render event %>
        <p class="mt-4">
          <%= link_to "Show this event", event, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
        </p>
      </div>
    <% end %>
  </div>

  <!-- Eventos añadidos en los últimos 30 días -->
  <div id="recent-events" class="mb-10">
    <h2 class="text-3xl font-bold mb-4 text-gray-700">Events Added in the Last 30 Days</h2>
    <% @recent_events.each do |event| %>
      <div class="mb-6 p-4 bg-gray-100 rounded-lg shadow-md hover:shadow-lg transition-shadow">
        <%= render event %>
        <p class="mt-4">
          <%= link_to "Show this event", event, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
        </p>
      </div>
    <% end %>
  </div>

  <!-- Eventos de la próxima semana -->
  <div id="upcoming_events">
    <h2 class="text-3xl font-bold mb-4 text-gray-700">Next week's events</h2>
    <% @upcoming_events.each do |event| %>
      <div class="mb-6 p-4 bg-gray-50 rounded-lg shadow-md hover:shadow-lg transition-shadow">
        <%= render event %>
        <p class="mt-4">
          <%= link_to "Show this event", event, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
        </p>
      </div>
    <% end %>
  </div>
  
</div>
