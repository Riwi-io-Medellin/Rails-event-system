<div class="container mx-auto p-6 max-w-4xl">

  <!-- TÃ­tulo principal -->
  <h1 class="text-3xl font-bold mb-6 text-gray-800">Editing Event</h1>

  <!-- Renderizar el formulario -->
  <div class="bg-white p-8 rounded-lg shadow-md">
    <%= render "form", event: @event %>
