<div class="container mx-auto p-6 max-w-4xl">

  <% if notice.present? %>
    <div class="mb-4 p-4 text-green-800 bg-green-100 border border-green-300 rounded">
      <%= notice %>
    </div>
  <% end %>

  <div class="mb-8 bg-white p-6 rounded-lg shadow-md">
    <%= render @event %>
  </div>

  <div class="flex justify-between items-center mb-6">
    <div>
      <%= link_to t("events.show_event"), edit_event_path(@event), class: "text-blue-600 hover:text-blue-800 font-semibold" %> |
      <%= link_to t("events.title"), events_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
    </div>

    <%= button_to t("helpers.submit.destroy", model: Event.model_name.human), @event, method: :delete, data: { confirm: t("helpers.confirm.destroy", model: Event.model_name.human) }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

</div>
