<div class="container mx-auto p-6 max-w-4xl">

  <!-- Mensaje de notificación -->
  <% if notice.present? %>
    <div class="mb-4 p-4 text-green-800 bg-green-100 border border-green-300 rounded">
      <%= notice %>
    </div>
  <% end %>

  <!-- Renderizar el evento -->
  <div class="mb-8 bg-white p-6 rounded-lg shadow-md">
    <%= render @event %>
  </div>

  <!-- Enlaces para editar y volver atrás -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <%= link_to "Edit this event", edit_event_path(@event), class: "text-blue-600 hover:text-blue-800 font-semibold" %> |
      <%= link_to "Back to events", events_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
    </div>

    <!-- Botón para destruir el evento -->
    <%= button_to "Destroy this event", @event, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

</div>
