<div class="container mx-auto p-6 max-w-md">

  <!-- Título principal -->
  <h2 class="text-3xl font-bold mb-6 text-gray-800 text-center">Forgot Your Password?</h2>

  <!-- Formulario para restablecer la contraseña -->
  <div class="bg-white p-8 rounded-lg shadow-md">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'space-y-6' }) do |f| %>

      <!-- Renderizar mensajes de error -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- Campo de Email -->
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <!-- Botón para enviar instrucciones -->
      <div class="flex items-center justify-center">
        <%= f.submit "Send Me Reset Password Instructions", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>

  <!-- Enlaces relacionados (iniciar sesión, registrarse, etc.) -->
  <div class="mt-6 text-center">
    <%= render "devise/shared/links" %>
  </div>

</div>
