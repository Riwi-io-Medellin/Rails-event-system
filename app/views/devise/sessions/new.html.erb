<div class="container mx-auto p-6 max-w-md">

  <!-- Título principal -->
  <h2 class="text-3xl font-bold mb-6 text-gray-800 text-center">Log In</h2>

  <!-- Formulario de inicio de sesión -->
  <div class="bg-white p-8 rounded-lg shadow-md">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-6' }) do |f| %>

      <!-- Campo de Email -->
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <!-- Campo de Contraseña -->
      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <!-- Campo de Recordarme -->
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center mb-4">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-700" %>
        </div>
      <% end %>

      <!-- Botón de Iniciar Sesión -->
      <div class="flex items-center justify-center">
        <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
  </div>

  <!-- Enlaces relacionados (registro, recuperar contraseña, etc.) -->
  <div class="mt-6 text-center">
    <%= render "devise/shared/links" %>
  </div>

</div>
