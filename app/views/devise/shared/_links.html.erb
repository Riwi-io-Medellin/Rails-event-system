<div class="mt-6 space-y-4 text-center">

  <!-- Enlace para iniciar sesión, si no estamos ya en la vista de sesiones -->
  <%- if controller_name != 'sessions' %>
    <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-800 font-semibold" %>
    <br>
  <% end %>
  
  <!-- Enlace para registrarse, si es posible registrarse y no estamos en la vista de registro -->
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-800 font-semibold" %>
    <br>
  <% end %>
  
  <!-- Enlace para recuperar la contraseña, si está habilitada la recuperación de contraseña -->
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-600 hover:text-blue-800 font-semibold" %>
    <br>
  <% end %>
  
  <!-- Enlace para reenviar las instrucciones de confirmación, si está habilitado el módulo confirmable -->
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-blue-600 hover:text-blue-800 font-semibold" %>
    <br>
  <% end %>
  
  <!-- Enlace para desbloquear la cuenta, si está habilitado el módulo lockable -->
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-blue-600 hover:text-blue-800 font-semibold" %>
    <br>
  <% end %>
  
  <!-- Botones para iniciar sesión con OmniAuth, si está habilitado -->
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    <% end %>
  <% end %>

</div>
